<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.luckycharmfairy.presentation.mymatches.matchreport.MatchReportFragment"
    android:background="@color/background">


    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="직관요정"
        android:textSize="30sp"
        android:textColor="@color/main_mint"
        style="@style/textStyle_title"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/iv_ball"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@+id/tv_app_name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_app_name"
        app:layout_constraintStart_toEndOf="@+id/tv_app_name"
        android:src="@drawable/baseball"
        app:tint="@color/main_mint" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_0.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <Button
        android:id="@+id/btn_match_record"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_round_border_small"
        android:backgroundTint="@color/main_light_gray"
        android:text="직관 기록"
        style="@style/textStyle_subtitle"
        app:layout_constraintEnd_toStartOf="@+id/guideline_0.5"
        app:layout_constraintTop_toBottomOf="@+id/tv_app_name"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="5dp"
        />

    <Button
        android:id="@+id/btn_match_report"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_round_border_small"
        android:backgroundTint="@color/main_mint"
        android:text="직관 리포트"
        style="@style/textStyle_subtitle"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/guideline_0.5"
        app:layout_constraintTop_toTopOf="@+id/btn_match_record"
        android:layout_marginStart="5dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_match_record"
        app:layout_constraintBottom_toTopOf="@+id/view_tab_background"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <Spinner
                android:id="@+id/spinner_sport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintTop_toTopOf="@+id/spinner_my_team"
                app:layout_constraintBottom_toBottomOf="@+id/spinner_my_team"
                app:layout_constraintEnd_toStartOf="@+id/spinner_my_team"
                />

            <Spinner
                android:id="@+id/spinner_my_team"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.35"
                app:layout_constraintTop_toTopOf="@+id/spinner_period"
                app:layout_constraintBottom_toBottomOf="@+id/spinner_period"
                app:layout_constraintEnd_toStartOf="@+id/spinner_period"
                />

            <Spinner
                android:id="@+id/spinner_period"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp"
                />

            <TextView
                android:id="@+id/tv_barchart_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="· 직관 횟수"
                style="@style/textStyle_subheading"
                app:layout_constraintTop_toBottomOf="@+id/spinner_sport"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                />

            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:id="@+id/barchart_matches"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/bg_round_border_small"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_barchart_title" />

            <TextView
                android:id="@+id/tv_piechart_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="· 응원팀 직관 승률"
                style="@style/textStyle_subheading"
                app:layout_constraintTop_toBottomOf="@+id/barchart_matches"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_piechart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/bg_round_border_small"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_piechart_title"
                >

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/piechart_all_matches"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toTopOf="@+id/layout_piechart"
                app:layout_constraintStart_toStartOf="@+id/layout_piechart"
                app:layout_constraintEnd_toEndOf="@+id/layout_piechart"
                android:layout_marginTop="5dp"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="종합 승률"
                    android:layout_marginTop="5dp"
                    style="@style/textStyle_subheading"
                    app:layout_constraintEnd_toEndOf="@+id/piechart_all_matches"
                    app:layout_constraintStart_toStartOf="@+id/piechart_all_matches"
                    app:layout_constraintTop_toBottomOf="@+id/piechart_all_matches" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/piechart_home_matches"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:layout_constraintTop_toBottomOf="@+id/piechart_all_matches"
                app:layout_constraintStart_toStartOf="@+id/layout_piechart"
                app:layout_constraintEnd_toEndOf="@+id/guideline_half"
                app:layout_constraintBottom_toBottomOf="@+id/layout_piechart"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홈 승률"
                android:layout_marginTop="5dp"
                style="@style/textStyle_subheading"
                app:layout_constraintEnd_toEndOf="@+id/piechart_home_matches"
                app:layout_constraintStart_toStartOf="@+id/piechart_home_matches"
                app:layout_constraintTop_toBottomOf="@+id/piechart_home_matches"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="15dp"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_half"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/piechart_away_matches"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:layout_constraintTop_toBottomOf="@+id/piechart_all_matches"
                app:layout_constraintEnd_toEndOf="@+id/layout_piechart"
                app:layout_constraintStart_toStartOf="@+id/guideline_half"
                app:layout_constraintBottom_toBottomOf="@+id/layout_piechart"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="어웨이 승률"
                android:layout_marginTop="5dp"
                style="@style/textStyle_subheading"
                app:layout_constraintEnd_toEndOf="@+id/piechart_away_matches"
                app:layout_constraintStart_toStartOf="@+id/piechart_away_matches"
                app:layout_constraintTop_toBottomOf="@+id/piechart_away_matches"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="15dp"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_winning_streak_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="· 최다 연승 기록"
                style="@style/textStyle_subheading"
                app:layout_constraintTop_toBottomOf="@+id/layout_piechart"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_winning_streak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/bg_round_border_small"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_winning_streak_title"
                >

                <TextView
                    android:id="@+id/tv_winning_streak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내가 직관을 간 날,\n내 응원팀은 최다 N연승을 기록했어요!"
                    style="@style/textStyle_subtitle"
                    android:gravity="center"
                    android:lineSpacingExtra="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_winning_streak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tv_winning_streak"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_margin="10dp"
                    tools:listitem="@layout/recyclerview_winning_streak"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_win_by_day_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="· 직관 요일별 승리 횟수"
                style="@style/textStyle_subheading"
                app:layout_constraintTop_toBottomOf="@+id/layout_winning_streak"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_win_by_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/bg_round_border_small"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_win_by_day_title"
                >

                <TextView
                    android:id="@+id/tv_win_by_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O요일에 직관을 갔을 때\n가장 많이 승리했어요!"
                    style="@style/textStyle_subtitle"
                    android:gravity="center"
                    android:lineSpacingExtra="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"
                    />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_0.08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.08" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_0.20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.20" />
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_0.32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.32" />
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_0.44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.44" />
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_0.56"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.56" />
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_0.68"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.68" />
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_0.80"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.80" />
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_0.92"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.92" />
                <TextView
                    android:id="@+id/tv_monday"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:text="월"
                    style="@style/textStyle_subtitle"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/main_gray"
                    android:gravity="center"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="@+id/guideline_0.08"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_0.20"
                    app:layout_constraintTop_toBottomOf="@+id/tv_win_by_day"
                    android:background="@drawable/bg_round_border_big"
                    />
                <TextView
                    android:id="@+id/tv_tuesday"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:text="화"
                    style="@style/textStyle_subtitle"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/main_gray"
                    android:gravity="center"
                    android:layout_marginHorizontal="5dp"
                    app:layout_constraintStart_toStartOf="@+id/guideline_0.20"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_0.32"
                    app:layout_constraintTop_toTopOf="@+id/tv_monday"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_monday"
                    android:background="@drawable/bg_round_border_big"
                    />
                <TextView
                    android:id="@+id/tv_wednesday"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:text="수"
                    style="@style/textStyle_subtitle"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/main_gray"
                    android:gravity="center"
                    android:layout_marginHorizontal="5dp"
                    app:layout_constraintStart_toStartOf="@+id/guideline_0.32"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_0.44"
                    app:layout_constraintTop_toTopOf="@+id/tv_monday"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_monday"
                    android:background="@drawable/bg_round_border_big"
                    />
                <TextView
                    android:id="@+id/tv_thursday"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:text="목"
                    style="@style/textStyle_subtitle"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/main_gray"
                    android:gravity="center"
                    android:layout_marginHorizontal="5dp"
                    app:layout_constraintStart_toStartOf="@+id/guideline_0.44"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_0.56"
                    app:layout_constraintTop_toTopOf="@+id/tv_monday"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_monday"
                    android:background="@drawable/bg_round_border_big"
                    />
                <TextView
                    android:id="@+id/tv_friday"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:text="금"
                    style="@style/textStyle_subtitle"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/main_gray"
                    android:gravity="center"
                    android:layout_marginHorizontal="5dp"
                    app:layout_constraintStart_toStartOf="@+id/guideline_0.56"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_0.68"
                    app:layout_constraintTop_toTopOf="@+id/tv_monday"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_monday"
                    android:background="@drawable/bg_round_border_big"
                    />
                <TextView
                    android:id="@+id/tv_saturday"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:text="토"
                    style="@style/textStyle_subtitle"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/main_gray"
                    android:gravity="center"
                    android:layout_marginHorizontal="5dp"
                    app:layout_constraintStart_toStartOf="@+id/guideline_0.68"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_0.80"
                    app:layout_constraintTop_toTopOf="@+id/tv_monday"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_monday"
                    android:background="@drawable/bg_round_border_big"
                    />
                <TextView
                    android:id="@+id/tv_sunday"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:text="일"
                    style="@style/textStyle_subtitle"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/main_gray"
                    android:gravity="center"
                    android:layout_marginHorizontal="5dp"
                    app:layout_constraintStart_toStartOf="@+id/guideline_0.80"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_0.92"
                    app:layout_constraintTop_toTopOf="@+id/tv_monday"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_monday"
                    android:background="@drawable/bg_round_border_big"
                    />

                <TextView
                    android:id="@+id/tv_monday_win_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00%"
                    style="@style/textStyle_subtitle"
                    android:textColor="@color/main_gray"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_monday"
                    app:layout_constraintStart_toStartOf="@+id/tv_monday"
                    app:layout_constraintEnd_toEndOf="@+id/tv_monday"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <TextView
                    android:id="@+id/tv_tuesday_win_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00%"
                    style="@style/textStyle_subtitle"
                    android:textColor="@color/main_gray"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_tuesday"
                    app:layout_constraintStart_toStartOf="@+id/tv_tuesday"
                    app:layout_constraintEnd_toEndOf="@+id/tv_tuesday"
                    />

                <TextView
                    android:id="@+id/tv_wednesday_win_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00%"
                    style="@style/textStyle_subtitle"
                    android:textColor="@color/main_gray"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_wednesday"
                    app:layout_constraintStart_toStartOf="@+id/tv_wednesday"
                    app:layout_constraintEnd_toEndOf="@+id/tv_wednesday"
                    />
                <TextView
                    android:id="@+id/tv_thursday_win_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00%"
                    style="@style/textStyle_subtitle"
                    android:textColor="@color/main_gray"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_thursday"
                    app:layout_constraintStart_toStartOf="@+id/tv_thursday"
                    app:layout_constraintEnd_toEndOf="@+id/tv_thursday"
                    />
                <TextView
                    android:id="@+id/tv_friday_win_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00%"
                    style="@style/textStyle_subtitle"
                    android:textColor="@color/main_gray"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_friday"
                    app:layout_constraintStart_toStartOf="@+id/tv_friday"
                    app:layout_constraintEnd_toEndOf="@+id/tv_friday"
                    />
                <TextView
                    android:id="@+id/tv_saturday_win_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00%"
                    style="@style/textStyle_subtitle"
                    android:textColor="@color/main_gray"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_saturday"
                    app:layout_constraintStart_toStartOf="@+id/tv_saturday"
                    app:layout_constraintEnd_toEndOf="@+id/tv_saturday"
                    />
                <TextView
                    android:id="@+id/tv_sunday_win_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00%"
                    style="@style/textStyle_subtitle"
                    android:textColor="@color/main_gray"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sunday"
                    app:layout_constraintStart_toStartOf="@+id/tv_sunday"
                    app:layout_constraintEnd_toEndOf="@+id/tv_sunday"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_monthly_winning_rates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="· 최근 월별 승률"
                style="@style/textStyle_subheading"
                app:layout_constraintTop_toBottomOf="@+id/layout_win_by_day"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/linechart_matches"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                android:padding="20dp"
                app:layout_constraintEnd_toEndOf="parent"
