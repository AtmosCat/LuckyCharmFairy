<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_sport_name"
        style="@style/textStyle_subheading"
        android:background="@drawable/bg_rectangular_border"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:maxLength="30"
        android:paddingStart="20dp"
        android:text="· 종목 이름"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_delete_my_sport"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toTopOf="@+id/tv_sport_name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_sport_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:src="@drawable/bin"
        app:tint="@color/main_medium_gray" />


</androidx.constraintlayout.widget.ConstraintLayout>